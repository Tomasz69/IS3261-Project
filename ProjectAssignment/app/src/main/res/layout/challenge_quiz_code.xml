<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darker_grey"
    android:padding="10dp"
    tools:context="com.a0122554m.kohweilun.projectassignment.ChallengeQuizCodeActivity">

    <EditText
        android:id="@+id/challengeCodeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/greyish_white"
        android:hint="Enter Challenge Code" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/challenge_button"
        android:background="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:onClick="onClick_GoToChallengeQuizList" />

    <TextView
        android:id="@+id/codeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/greyish_white"
        android:textSize="16sp" />
</LinearLayout>
